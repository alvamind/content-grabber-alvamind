{
  "name": "content-grabber-alvamind",
  "version": "1.0.0",
  "author": "Alvamind",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvamind/content-grabber-alvamind.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "bun-types": "^1.1.43",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "description": "A Node.js library to extract text content from various file types. ðŸ’ª",
  "files": [
